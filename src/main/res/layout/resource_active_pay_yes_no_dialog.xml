<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="275dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:background="@drawable/curve_shape"
    android:orientation="vertical"
    android:layout_margin="5dp"
    >


    <TextView
        android:id="@+id/txt_yes_no_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Yes No Message"
        android:textColor="@android:color/black"
        android:textSize="23dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_yes_no_description"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="Yes No Description"
        android:lines="2"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:textStyle="bold" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:orientation="horizontal"
        android:layout_marginTop="35dp">

        <Button
            android:id="@+id/btn_yes_no_submit"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/unselected_rounded_corner"
            android:clickable="true"
            android:text="Submit"
            android:textColor="#5DBCD2"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_yes_no_cancel"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/unselected_rounded_corner"
            android:clickable="true"
            android:text="Cancel"
            android:textColor="#5DBCD2"
            android:textStyle="bold" />
    </LinearLayout>



</LinearLayout>
 